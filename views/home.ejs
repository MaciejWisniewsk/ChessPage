<body class="d-flex text-center text-white bg-dark">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
      <div class="navbar-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">ChessPage</h3>
        <nav class="nav justify-content-center">
          <a class="nav-link" href="/posts">Forum</a>
          <a class="nav-link" href="/ranking">Ranking</a>
          <% if(!currentUser) { %>
          <a class="nav-link" href="/login">Login</a>
          <a class="nav-link" href="/register">Register</a>
          <% } else { %>
          <a class="nav-link" href="/profile">Profile</a>
          <a class="nav-link" href="/logout">Logout</a>
          <% } %>
        </nav>
      </div>
    </header>
    <main class="px-3 home-main">
      <h1>ChessPage</h1>
      <p class="lead">Welcome to ChessPage! <br>
        The best website ever created so far.</p>
      <a href="/rooms" class="btn btn-lg btn-secondary fw-bolds bg-white">Play a Game!</a>
    </main>

    <footer class="mt-auto text-white-50">
      <p>&copy; 2022 ChessPage</p>
    </footer>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
