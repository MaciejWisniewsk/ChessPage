<div class="modal fade" id="updateCommentModal" tabindex="-1" aria-labelledby="updateCommentModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- action and textarea value to be added in jquery script -->
            <form action="" method="POST" class="validated-form" id="updateCommentForm" novalidate>
                <div class="modal-body">
                    <div class="mb-3">
                        <textarea rows="5" class="form-control" name="text" id="updateCommentTextarea"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>