<% layout('layouts/boilerplate')%>
<%- include('./createPostModal')%>

<div class="d-flex justify-content-around">
    <h1 class="text-center">Forum</h1>
    <% if(currentUser) { %>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createPostModal">Create Post</button>
    <% } %>
</div>
<div class="row mt-3">
    <div class="col-md-8 offset-md-2">
        <% posts.forEach(post => {  %>
        <div class="card mb-3">
            <div class="card-header text-muted d-flex justify-content-between">
                <small><%=post.author.username%></small>
                <div>
                    <form action="/posts/<%=post._id%>" class='d-inline-block'>
                        <button class="btn btn-outline-info btn-sm">View</button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= post.title %> </h5>
            </div>
        </div>
        <% }) %>
    </div>
</div>