<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Edit post</h1>
        <form action="/posts/<%=post._id%>?_method=PUT" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" value="<%=post.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="content">Content</label>
                <textarea class="form-control" rows="3" id="content" name="content"
                    required><%=post.content%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>